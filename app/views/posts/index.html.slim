div class="row"
  div class="col-2"
  div class="col-10"
    p
    div class="row"
      div class="col"
        h2 class="text-start"= "Посты пользователей"
      div class="col"
        = link_to "Все посты", root_path, class: 'btn btn-outline-info'
        - if current_user
          = " "
          = link_to "Мои посты", 'posts/my', class: 'btn btn-outline-success'
          = " "
          = link_to "Подписки", 'posts/following', class: 'btn btn-outline-primary'
    .products
      table class="table"
        tb
          p= link_to "Новый пост", new_post_path, class: "btn btn-outline-success btn-sm"
        tb
          = render @posts
      div class="digg_pagination bg-transparent"
        p= will_paginate @products
